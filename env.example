# Application Configuration
ENVIRONMENT=production
DEBUG=false
SECRET_KEY=generate_a_secure_secret_key_here
APP_VERSION=1.0.0

# Frontend
VITE_API_BASE_URL=http://localhost:8000
VITE_APP_VERSION=1.0.0
VITE_ENVIRONMENT=production

# Database
POSTGRES_DB=openclip_pro
POSTGRES_USER=openclip_user
POSTGRES_PASSWORD=secure_password_change_me
DATABASE_URL=postgresql://openclip_user:secure_password_change_me@postgres:5432/openclip_pro

# Redis
REDIS_PASSWORD=redis_password_change_me
REDIS_URL=redis://:redis_password_change_me@redis:6379

# AI Provider API Keys
OPENAI_API_KEY=your_openai_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM_EMAIL=noreply@yourdomain.com
SMTP_FROM_NAME=OpenClip Pro

# Monitoring (Optional)
SENTRY_DSN=your_sentry_dsn_here
GRAFANA_PASSWORD=secure_grafana_password

# Cloud Storage (Optional)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-openclip-bucket

# Security
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
RATE_LIMIT_ENABLED=true

# SSL (for production)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem